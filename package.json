{
  "name": "exovision",
  "version": "0.1.0",
  "description": "Call remote HTTP services in an easy way, both in brwoser and node.js",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "prebuild": "npm-run-all clean-build test",
    "build": "tsc -p ./tsconfig.json",
    "clean-build": "rimraf ./build && mkdir build",
    "lint": "tslint --fix -c tslint.json -t stylish -p ./tsconfig.json",
    "dev": "mocha -r ts-node/register -r dotenv/config src/test/**/*.ts --watch-extensions ts --watch",
    "test": "mocha -r ts-node/register -r dotenv/config src/test/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fox1t/exovision.git"
  },
  "keywords": [
    "xhr",
    "http",
    "ajax",
    "promise"
  ],
  "author": "Maksim Sinik <maksim@sinik.it>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fox1t/exovision/issues"
  },
  "homepage": "https://github.com/fox1t/exovision#readme",
  "devDependencies": {
    "@types/chai": "~4.1.4",
    "@types/chai-as-promised": "~7.1.0",
    "@types/mocha": "~5.2.5",
    "@types/node": "~10.5.4",
    "chai": "~4.1.2",
    "chai-as-promised": "~7.1.1",
    "dotenv": "~6.0.0",
    "husky": "~0.14.3",
    "mocha": "~5.2.0",
    "nock": "~9.4.3",
    "npm-run-all": "~4.1.3",
    "rimraf": "~2.6.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.0.1"
  },
  "dependencies": {
    "axios": "~0.18.0",
    "is-url": "~1.2.4",
    "url-join": "~4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  }
}
